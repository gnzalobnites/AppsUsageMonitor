<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- MISMO NOMBRE - VALORES PARA MODO OSCURO -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark_night</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorAccent_night</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="colorOnSecondary">@android:color/black</item>
        
        <!-- VALORES PARA MODO OSCURO -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/card_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark_night</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/colorPrimaryDark_night</item>
        
        <!-- Color de acento -->
        <item name="colorAccent">@color/colorAccent_night</item>
        
        <!-- Formas redondeadas -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent</item>
    </style>
    
    <!-- ✅ CORREGIDO: Usa el mismo splash para ambos temas -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark_night</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark_night</item>
    </style>
    
    <!-- Toolbar -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@color/colorPrimaryDark_night</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <!-- Botón primario -->
    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimaryDark_night</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
</resources>