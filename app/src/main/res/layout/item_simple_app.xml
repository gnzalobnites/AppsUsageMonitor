<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/colorSurface">

    <!-- Checkbox para selecciÃ³n -->
    <CheckBox
        android:id="@+id/checkBoxApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:buttonTint="?attr/colorAccent"/>

    <!-- Icono de la app -->
    <ImageView
        android:id="@+id/imageAppIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_default_app"
        android:contentDescription="@string/item_app_icon_desc"/>

    <!-- Nombre de la app -->
    <TextView
        android:id="@+id/textAppName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/item_simple_app_placeholder"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>