<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- SECCION: CONFIGURACION GENERAL -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_general_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="16dp"/>

                <!-- TEMA OSCURO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_dark_mode"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <Switch
                        android:id="@+id/swDarkMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="?attr/colorAccent"
                        app:trackTint="?attr/colorAccent"/>

                    <TextView
                        android:id="@+id/tvThemeStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/settings_theme_light"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

                <!-- FRECUENCIA DE LOS BANNERS (única opción) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_banner_frequency_label"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <Spinner
                        android:id="@+id/spBannersPerDay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvBannersPerDayValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="5 minutos"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                </LinearLayout>

                <!-- Texto explicativo del comportamiento -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_banner_behavior_info"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- SECCION: NOTIFICACIONES -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_notifications_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="16dp"/>

                <!-- Auto-start -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_auto_start"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <Switch
                        android:id="@+id/swAutoStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="?attr/colorAccent"
                        app:trackTint="?attr/colorAccent"/>

                    <TextView
                        android:id="@+id/tvAutoStartStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/settings_auto_start_manual"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

                <!-- Optimizacion bateria -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_battery_opt"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <Switch
                        android:id="@+id/swBatteryOptimization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumbTint="?attr/colorAccent"
                        app:trackTint="?attr/colorAccent"/>

                    <TextView
                        android:id="@+id/tvBatteryStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/settings_battery_on"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

                <!-- Vibracion -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_vibration"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <Switch
                        android:id="@+id/swVibrateNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumbTint="?attr/colorAccent"
                        app:trackTint="?attr/colorAccent"/>

                    <TextView
                        android:id="@+id/tvVibrateStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/settings_vibration_on"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

                <!-- Sonido -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_sound"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <Switch
                        android:id="@+id/swSoundNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="?attr/colorAccent"
                        app:trackTint="?attr/colorAccent"/>

                    <TextView
                        android:id="@+id/tvSoundStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/settings_sound_off"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- SECCION: REPORTES -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_reports_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="16dp"/>

                <!-- Exportacion diaria -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_daily_export"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <Switch
                        android:id="@+id/swExportDailyReports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="?attr/colorAccent"
                        app:trackTint="?attr/colorAccent"/>

                    <TextView
                        android:id="@+id/tvExportStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/settings_export_manual"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- SECCION: ACCIONES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnSaveSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/settings_save"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary"/>

            <Button
                android:id="@+id/btnResetSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_reset"
                android:backgroundTint="?attr/colorError"
                android:textColor="?android:attr/textColorPrimaryInverse"/>

        </LinearLayout>

        <!-- SECCION: ESTADO -->
        <TextView
            android:id="@+id/tvSettingsStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_last_update"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:padding="16dp"/>

    </LinearLayout>

</ScrollView>