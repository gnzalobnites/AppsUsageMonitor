                        android:thumbTint="?attr/colorAccent"
                        app:trackTint="?attr/colorAccent"/>

                    <TextView
                        android:id="@+id/tvAutoStartStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="â­• Manual"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

                <!-- Optimizacion bateria -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="OptimizaciÃ³n baterÃ­a"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <Switch
                        android:id="@+id/swBatteryOptimization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumbTint="?attr/colorAccent"
                        app:trackTint="?attr/colorAccent"/>

                    <TextView
                        android:id="@+id/tvBatteryStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="âœ… Activa"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

                <!-- Vibracion -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="VibraciÃ³n"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <Switch
                        android:id="@+id/swVibrateNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumbTint="?attr/colorAccent"
                        app:trackTint="?attr/colorAccent"/>

                    <TextView
                        android:id="@+id/tvVibrateStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="âœ… Activa"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

                <!-- Sonido -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sonido"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <Switch
                        android:id="@+id/swSoundNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="?attr/colorAccent"
                        app:trackTint="?attr/colorAccent"/>

                    <TextView
                        android:id="@+id/tvSoundStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="ðŸ”‡ Silencio"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- SECCION: REPORTES -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Reportes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="16dp"/>

                <!-- Exportacion diaria -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ExportaciÃ³n diaria automÃ¡tica"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <Switch
                        android:id="@+id/swExportDailyReports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="?attr/colorAccent"
                        app:trackTint="?attr/colorAccent"/>

                    <TextView
                        android:id="@+id/tvExportStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="â­• Manual"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- SECCION: ACCIONES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnSaveSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ðŸ’¾ Guardar"
                android:backgroundTint="?attr/colorPrimary"
