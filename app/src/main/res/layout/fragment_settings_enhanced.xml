<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- SECCION: CONFIGURACION GENERAL -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ ConfiguraciÃ³n General"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="16dp"/>

                <!-- TEMA OSCURO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tema oscuro"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <Switch
                        android:id="@+id/swDarkMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="?attr/colorAccent"
                        app:trackTint="?attr/colorAccent"/>

                    <TextView
                        android:id="@+id/tvThemeStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="â˜€ï¸ Claro"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

                <!-- FRECUENCIA DE LOS BANNERS (Ãºnica opciÃ³n) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frecuencia de los banners:"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <Spinner
                        android:id="@+id/spBannersPerDay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvBannersPerDayValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="5 minutos"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                </LinearLayout>

                <!-- Texto explicativo del comportamiento -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â±ï¸ El banner permanece visible hasta que lo cierres con un click"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- SECCION: NOTIFICACIONES -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”” Notificaciones"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="16dp"/>

                <!-- Auto-start -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Inicio automÃ¡tico"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <Switch
                        android:id="@+id/swAutoStart"
                        android:layout_width="wrap_content"
