<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- SecciÃ³n: ConfiguraciÃ³n de Banners -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”” ConfiguraciÃ³n de Banners"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="12dp"/>

                <!-- Activar banners -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Switch
                        android:id="@+id/swEnableBanners"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Activar banners"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:thumbTint="?attr/colorAccent"
                        app:trackTint="?attr/colorAccent"/>

                    <TextView
                        android:id="@+id/tvBannerStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­• Desactivado"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

                <!-- Estado de modo preciso (UsageStats) -->
                <TextView
                    android:id="@+id/tvUsageStatsStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Modo preciso desactivado"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:textColor="@android:color/darker_gray"/>

                <!-- Demo TikTok -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Switch
                        android:id="@+id/swShowTikTokDemo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Demo TikTok"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:thumbTint="?attr/colorAccent"
                        app:trackTint="?attr/colorAccent"/>

                    <TextView
                        android:id="@+id/tvTikTokDemoStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­• Demo desactivada"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"/>

                </LinearLayout>

                <!-- Botones de acciÃ³n -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnTestBanner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ§ª Probar Banner"
                        android:backgroundTint="?attr/colorAccent"
                        android:textColor="?android:attr/textColorPrimaryInverse"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btnCheckPermissions"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ” Permisos"
                        android:backgroundTint="?attr/colorPrimary"
                        android:textColor="?android:attr/textColorPrimaryInverse"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SecciÃ³n: SelecciÃ³n de Apps -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“± Apps Monitoreadas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="12dp"/>

                <!-- Contador y botÃ³n -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvSelectedAppsCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0/0 apps seleccionadas"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <Button
                        android:id="@+id/btnSelectApps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Seleccionar"
                        android:backgroundTint="?attr/colorPrimary"
                        android:textColor="?android:attr/textColorPrimaryInverse"/>

                </LinearLayout>

                <!-- Lista de apps seleccionadas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apps seleccionadas:"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewApps"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="?attr/colorSurface"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>